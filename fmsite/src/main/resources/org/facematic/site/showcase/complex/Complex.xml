<?xml version="1.0" encoding="UTF-8"?>

<complex xmlns="http://facematic.org/fm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://facematic.org/fm http://facematic.org/facematic.xsd"
	controller="org.facematic.site.showcase.complex.Complex">

	<content sizeFull="true" expandRatio="100">
		<TabSheet sizeFull="true" expandRatio="100">
			<composite src="first" caption="First" />
			<composite src="second" caption="Second" />
		</TabSheet>
	</content>

	<part name="base" sizeFull="true" expandRatio="100" margin="true">
		<hl spacing="true">
			<Button caption="${firstButtonCaption}" onClick="first" />
			<Button caption="${secondButtonCaption}" onClick="second" />
			<placeholder name="moreButtons" />
		</hl>
	</part>

	<extension name="first" base="base">
		<subst name="firstButtonCaption">First</subst>
		<subst name="secondButtonCaption">Second</subst>
	</extension>

	<extension name="second" base="first"
		controller="org.facematic.site.showcase.complex.ComplexSecond">
		<subst name="firstButtonCaption">second-First</subst>
		<subst name="secondButtonCaption">second-Second</subst>
		<implement placeholder="moreButtons">
			<Button caption="Third" onClick="third" />
		</implement>
	</extension>


</complex>